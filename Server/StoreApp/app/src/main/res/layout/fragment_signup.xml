<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:backgroundTint="#33dadae6"
    android:backgroundTintMode="screen">

    <EditText
        android:id="@+id/signupTextUsername"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/atomic_age"
        android:hint="Username"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#2929cc"
        android:textColorHint="#6677cc"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        tools:circularflow_radiusInDP="20" />

    <EditText
        android:id="@+id/signupTextFullname"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/atomic_age"
        android:hint="Fullname"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#2929cc"
        android:textColorHint="#6677cc"
        app:layout_constraintCircleRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupTextPassword"
        tools:circularflow_radiusInDP="20" />

    <EditText
        android:id="@+id/signupTextPassword"
        android:layout_width="273dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="@font/atomic_age"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#2929cc"
        android:textColorHint="#6677cc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupTextUsername"
        tools:circularflow_radiusInDP="20" />

    <Button
        android:id="@+id/signupsignupButton"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#6677cc"
        android:fontFamily="@font/atomic_age"
        android:text="Sign up"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupTextFullname" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="410dp"
        android:layout_height="242dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_3" />

</androidx.constraintlayout.widget.ConstraintLayout>
